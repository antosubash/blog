{
  "name": "antosubashs-blog",
  "description": "My personal blog",
  "version": "2.1.0",
  "private": true,
  "scripts": {
    "start": "next dev",
    "dev": "cross-env INIT_CWD=$PWD NODE_OPTIONS='--experimental-json-modules' next dev",
    "build": "cross-env INIT_CWD=$PWD NODE_OPTIONS='--experimental-json-modules' next build && cross-env NODE_OPTIONS='--experimental-json-modules' node ./scripts/postbuild.mjs",
    "serve": "next start",
    "format": "biome format --write .",
    "analyze": "cross-env ANALYZE=true next build",
    "lint": "biome check --write .",
    "lint:check": "biome check .",
    "generate-og-images": "cross-env INIT_CWD=$PWD NODE_OPTIONS='--experimental-json-modules' node ./scripts/og.mjs",
    "prepare": "husky",
    "knip": "knip",
    "knip:fix": "knip --fix"
  },
  "dependencies": {
    "@next/bundle-analyzer": "15.2.4",
    "@next/third-parties": "^15.2.4",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.21",
    "clsx": "^2.1.1",
    "contentlayer": "0.3.4",
    "date-fns": "^4.1.0",
    "github-slugger": "^2.0.0",
    "lucide-react": "^0.537.0",
    "mermaid": "^11.9.0",
    "next": "15.2.4",
    "next-contentlayer": "0.3.4",
    "next-themes": "^0.4.6",
    "pliny": "0.4.1",
    "postcss": "^8.5.3",
    "react": "19.0.0",
    "react-dom": "19.0.0",
    "reading-time": "1.5.0",
    "rehype-autolink-headings": "^7.1.0",
    "rehype-citation": "^2.2.2",
    "rehype-katex": "^7.0.1",
    "rehype-preset-minify": "7.0.1",
    "rehype-prism-plus": "^2.0.0",
    "rehype-slug": "^6.0.0",
    "remark-gfm": "^3.0.1",
    "remark-math": "^6.0.0",
    "sharp": "^0.33.5",
    "tailwind-merge": "^3.3.1",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.2",
    "@playwright/test": "^1.51.1",
    "@svgr/webpack": "^8.1.0",
    "@types/mdx": "^2.0.13",
    "@types/node": "^22.13.13",
    "@types/react": "^19.0.12",
    "cross-env": "^7.0.3",
    "husky": "^9.1.7",
    "knip": "4",
    "lint-staged": "^15.5.0",
    "typescript": "^5.8.2"
  },
  "lint-staged": {
    "*.+(js|jsx|ts|tsx|json|css|md|mdx)": [
      "biome check --write"
    ]
  },
  "packageManager": "pnpm@9.0.6"
}
